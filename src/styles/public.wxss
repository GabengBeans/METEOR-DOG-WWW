.search {
  background: #ffffff;
  padding: 25px 30px 0;
  border-radius: 3px;
  margin: 15px 0;
}
.table {
  background: #ffffff;
  padding: 20px 0;
  border-radius: 3px;
  margin: 15px 0;
}
.pager {
  background: #ffffff;
  padding: 20px;
  border-radius: 3px;
  margin: 15px 0;
  overflow: hidden;
}
.pager:after {
  content: '';
  display: block;
  clear: both;
}
.w-container {
  padding: 20px 30px;
  background: #ffffff;
  border-radius: 3px;
  margin: 15px 0;
}
.title {
  font-weight: normal;
  color: #2d8cf0;
  padding-bottom: 20px;
  border-bottom: 1px solid #e9eaec;
}
.title-center {
  font-size: 20px;
  color: #2d8cf0;
  margin: 15px 0;
  text-align: center;
  padding-bottom: 15px;
  border-bottom: 1px solid #e9eaec;
}
.weight {
  font-weight: bold;
}
.btn-group {
  margin: 80px 0 20px;
  text-align: center;
}
.btns {
  margin-bottom: 15px;
}
.tag-style {
  padding: 0 10px;
  min-width: 70px;
  text-align: center;
  margin-right: 10px;
}
.avatar {
  width: 6vw;
  height: 6vw;
  margin: 20px;
}
.user_detail_div,
.user_detail_media {
  display: flex;
}
.from_label {
  font-size: 12px;
  line-height: 16px;
  margin-right: 20px;
  display: inline-block;
  width: 100px;
  font-weight: bold;
  text-align: right;
  vertical-align: top;
}
.user_detail_div b {
  flex-direction: column;
  font-size: 12px;
  flex-wrap: wrap;
  width: 85%;
  font-weight: normal;
}
.image-style {
  margin-left: 120px;
  margin-top: 20px;
}
.tip {
  font-size: 12px;
  color: #555555;
}
.infos {
  padding: 10px;
  padding-left: 40px;
  border-bottom: 1px solid #e9eaec;
}
.infos .row {
  margin-bottom: 10px;
}
.infos .row > .ivu-col > span {
  font-weight: bold;
  color: #2d8cf0;
  margin-right: 15px;
}
